<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.a.ameplus">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
    <uses-permission android:name="android.permission.READ_CLIPBOARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <application
        android:name=".AMEplusApplication"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"


        android:label="AMEplus"
        android:configChanges="orientation"
        android:screenOrientation="portrait">
        <activity android:name=".SSHserver"
            android:label="SSHserver"></activity>
        <activity android:name=".MemUtils"
            android:label="MemUtils"/>
        <activity
            android:name=".AdbActivity"
            android:label="ADB"
            android:noHistory="true"
            />

        <activity android:name=".ConnectActivity"
            android:label="Connect Activity"
            android:noHistory="true"/>
        <activity android:name=".BluetoothActivity"
            android:label="Bluetooth Activity"
            android:noHistory="true"/>
        <activity android:name=".WifiActivity"
            android:label="Wifi Activity"
            android:noHistory="true"/>
        <activity android:name=".HotSpotActivity"
            android:label="HotSpot Activity"
            android:noHistory="true"/>
        <activity android:name=".NetworkActivity"
            android:label="NetworkActivity"
            android:noHistory="true"/>

        <activity
            android:name=".MainActivity"
            android:label="AMEplus"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>